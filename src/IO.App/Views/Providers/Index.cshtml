@using IO.App.Extensions
@model IEnumerable<IO.App.ViewModels.ProviderViewModel>

@{ ViewData["Title"] = "Providers List"; }

<h2>@ViewData["Title"]</h2>
<hr/>
<vc:summary></vc:summary>

<p>
    <a class="btn btn-info" asp-action="Create">New Provider</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeProvider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activ)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @this.FormatDocument(item.TypeProvider, item.Document)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TypeProvider)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Activ)
    </td>
    <td class="text-right">
        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil-alt"></span></a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
    </td>
</tr>}
    </tbody>
</table>
